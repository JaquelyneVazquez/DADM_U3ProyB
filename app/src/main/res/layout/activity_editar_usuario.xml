<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarUsuario">


    <TextView
        android:id="@+id/editarUsuario_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edicion de los datos del usuario."
        android:textColor="@color/azul"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editarUsuario_Titulo"/>

    <EditText
        android:id="@+id/editTextEditarUsuario_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre ******"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="611dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditarUsuario_Nombre"/>

    <EditText
        android:id="@+id/editTextEditarUsuario_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:text="Email ********"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="611dp" />

    <TextView
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. telefono:"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditarUsuario_Email"/>

    <EditText
        android:id="@+id/editTextEditarUsuario_Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="No de telefono ****"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/telefono"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="611dp" />

    <TextView
        android:id="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditarUsuario_Telefono"/>

    <EditText
        android:id="@+id/editTextEditarUsuario_Contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="Contraseña ****+"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/contrasena"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="611dp" />

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="57dp"
        android:layout_height="301dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnEditarUsuario_Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/primary"
            app:icon="@android:drawable/stat_notify_more"
            app:iconTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/optionsTelephone"
            tools:layout_editor_absoluteX="116dp" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnEditarUsuario_Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp"
            app:backgroundTint="@color/primary"
            app:icon="@android:drawable/ic_delete"
            app:iconTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/optionsTelephone"
            tools:layout_editor_absoluteX="222dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>