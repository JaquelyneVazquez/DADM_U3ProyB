<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegistroUsuario">

    <TextView
        android:id="@+id/editarUsuario_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de usuario."
        android:textColor="@color/azul"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="@dimen/margenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextRegistro_Nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margenes"
            android:background="@color/gris"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:hint="Nombre"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="@dimen/margenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextRegistro_Email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margenes"
            android:background="@color/gris"
            android:drawableEnd="@android:drawable/ic_dialog_email"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="@dimen/margenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextRegistro_NTelefono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margenes"
            android:background="@color/gris"
            android:drawableEnd="@android:drawable/ic_menu_call"
            android:hint="Telefono"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="@dimen/margenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextRegistro_Contrasena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margenes"
            android:background="@color/gris"
            android:drawableEnd="@android:drawable/ic_lock_idle_lock"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnRegistro_Guardar"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="Guardar."
        android:layout_marginRight="@dimen/dimen_48"
        android:textAlignment="center"
        app:backgroundTint="@color/primary"
        app:icon="@drawable/iconoacceder" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnRegistro_Cancelar"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="Cancelar."
            android:textAlignment="center"
            app:backgroundTint="@color/primary"
            app:icon="@drawable/iconoanadir" />

    </LinearLayout>

</LinearLayout>